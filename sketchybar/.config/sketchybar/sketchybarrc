#!/bin/bash

# See https://github.com/FelixKratz/dotfiles for more advanced configurations.

PLUGIN_DIR="$CONFIG_DIR/plugins" # scripts updating menubar items
ITEM_DIR="$CONFIG_DIR/items" # scripts defining menubar items

source "$CONFIG_DIR/colors.sh"

###############################################################################
# Bar Appearance                                                              #
###############################################################################

# See https://felixkratz.github.io/SketchyBar/config/bar
# See https://felixkratz.github.io/SketchyBar/config/tricks#color-picker

sketchybar --bar height=37        \
                 blur_radius=30   \
                 position=top     \
                 sticky=off       \
                 padding_left=10  \
                 padding_right=10 \
                 color=$BAR_COLOR

###############################################################################
# Defaults                                                                    #
###############################################################################

# See https://felixkratz.github.io/SketchyBar/config/items

sketchybar --default icon.font="SF Pro:Semibold:15.0"  \
                     icon.color=$WHITE                 \
                     label.font="SF Pro:Semibold:15.0" \
                     label.color=$WHITE                \
                     background.color=$ITEM_BG_COLOR   \
                     background.corner_radius=5        \
                     background.height=24              \
                     padding_left=5                    \
                     padding_right=5                   \
                     label.padding_left=4              \
                     label.padding_right=10            \
                     icon.padding_left=10              \
                     icon.padding_right=4

###############################################################################
# Left Items                                                                  #
###############################################################################

source $ITEM_DIR/spaces.sh
source $ITEM_DIR/front_app.sh

###############################################################################
# Right Items                                                                 #
###############################################################################

# See https://felixkratz.github.io/SketchyBar/config/items#adding-items-to-sketchybar
# See https://felixkratz.github.io/SketchyBar/config/events

source $ITEM_DIR/calendar.sh
source $ITEM_DIR/volume.sh
source $ITEM_DIR/battery.sh
source $ITEM_DIR/cpu.sh
# source $ITEM_DIR/ram.sh

###############################################################################
# Finalize Setup                                                              #
###############################################################################

# The below command is only needed at the end of the initial configuration to
# force all scripts to run the first time, it should never be run in an item 
# script.

sketchybar --updates
